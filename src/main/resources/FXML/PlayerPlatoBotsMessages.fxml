                <JFXButton fx:id="btnEvents" alignment="BOTTOM_LEFT" graphicTextGap="10.0" layoutX="10.0" layoutY="120.0" onAction="#goToPlayerEvents" prefHeight="32.0" prefWidth="169.0" style="-fx-border-width: 0px 0px 2px 0px; -fx-border-color: #00acea;" stylesheets="@../Style/StyleSheet.css" text="Events" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <graphic>
                        <ImageView fitHeight="15.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../Icons/playstation-cross-icon.png" />
                            </image>
