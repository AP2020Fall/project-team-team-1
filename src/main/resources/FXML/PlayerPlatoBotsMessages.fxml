                    <font>
                        <Font size="14.0" />
                    </font>
                    <graphic>
                        <ImageView fitHeight="15.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../Icons/playstation-circle-dark-icon.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="btnBack" layoutY="2.0" onAction="#back" style="-fx-border-color: #00acea; -fx-border-width: 0px 0px 2px 0px;" stylesheets="@../Style/StyleSheet.css" text="Back" textFill="WHITE" />
            </children>
        </Pane>
        <JFXButton fx:id="BtnClose" layoutX="574.0" layoutY="1.0" onAction="#closeApp" style="-fx-font-weight: bold;" text="X" textFill="WHITE" />
      <Label layoutX="218.0" layoutY="34.0" prefHeight="17.0" prefWidth="183.0" text="Your messages :" textFill="WHITE" />
      <ScrollPane hbarPolicy="NEVER" layoutX="213.0" layoutY="70.0" pannable="true" prefHeight="312.0" prefWidth="358.0" style="-fx-border-width: 2px;">
         <content>
            <VBox fx:id="vbox" prefHeight="311.0" prefWidth="356.0" style="-fx-background-color: #1a1b20;" />
         </content>
      </ScrollPane>
    </children>

